<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
                   android:weightSum="2"
                   android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:background="#fff">


        <androidx.cardview.widget.CardView
                android:id="@+id/imageView1"
                android:layout_width="190dp" android:layout_height="200dp" app:cardCornerRadius="14dp"
                android:layout_margin="5dp"
                android:elevation="10dp">

            <ImageView
                    android:src="@drawable/download"
                    android:id="@+id/roundedImageView"
                    android:layout_width="match_parent" android:layout_height="match_parent"
                    android:background="#8746"
                    android:scaleType="centerCrop"
            />
        </androidx.cardview.widget.CardView>
        <!--new card-->
        <TextView android:gravity="center" android:layout_gravity="center" android:id="@+id/movie_name" android:textStyle="bold" android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:text="what he f"/>
        <TextView android:gravity="center" android:layout_gravity="center" android:textSize="11sp" android:textStyle="italic|bold" android:id="@+id/movie_rating" android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="what he f"/>
    </LinearLayout>
</RelativeLayout>